<!DOCTYPE html>
<html lang="en">
<frameset cols="50%,50%">
  <frame src="frame_a.htm" marginwidth="100">
  <frame src="frame_b.htm" marginwidth="100">

  <head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Company Profile</title>
  </head>

  <body>

    <!-- Navigation -->
    <div class="navbar-wrapper">
      <div class="container">
        <nav class="navbar navbar-inverse navbar-static-top">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <div id="logo_nav" data-no-turbolink>
                <a class="navbar-brand" href="/">
                  <img id="techstart_logo" src="http://i.imgur.com/P7q8Dui.png">
                  <h3>TechStart</h3>
                </a>
              </div>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                <li><%= link_to 'Home', companies_path, method: :get %></li>
                <li><%= link_to 'My Profile', companies_path %></li>
                <li><%= link_to 'Edit My Company', edit_company_path(@company) %></li>
                <li><%= link_to 'Log In', user_session_path, method: :post %></li>
                <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li><!-- button to log out solves path issues -->
                <li><%= link_to 'Sign Up', new_user_registration_path, method: :get %></li>
              </ul>
            </div>
          </div>
        </nav>

      </div>
    </div>
    <!-- Page Content -->
    <div class="container">
      <br>
      <br>
      <br>
      <br>
      <!-- Heading Row -->
      <div class="row">
        <div class="col-md-4">
          <img class="img-responsive img-rounded" id="liveNinjaLogo" src="<%= @logo %>" alt="Logo Image " >

        </div>
        <!-- /.col-md-8 -->


        <div class="col-md-4">
          <h1><%= @name %></h1>
          <p><%= @about %></p>
        </div>
        <!-- /.col-md-4 -->

        <div class="col-md-4">
          <a class="twitter-timeline" href="https://twitter.com/<%= @twitter[1,@twitter.length] %>" data-widget-id="724738053403713536" data-screen-name="<%= @twitter[1, @twitter.length] %>">Tweets by <%= @twitter %></a>
          <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
        </div>
      </div>
      <!-- /.row -->

      <hr>

      <!-- Call to Action Well -->
      <div class="row">
        <div class="col-lg-12 company_show_bar_container">
          <div class="well text-center company_show_bar">
            <a href="https://twitter.com/<%= @twitter[1,@twitter.length] %>">
              <div class="social_media_box">
                <i class="fa fa-twitter fa-3x" aria-hidden="true"></i>
                <p><%= @twitter %></p>
              </div>
            </a>
            <a href="https://www.linkedin.com/company/<%= @linkedin %>">
              <div class="social_media_box">
                <i class="fa fa-linkedin-square fa-3x" aria-hidden="true"></i>
                <p><%= @linkedin %></p>
              </div>
            </a>
            <a href="https://www.instagram.com/<%= @instagram %>">
              <div class="social_media_box">
                <i class="fa fa-instagram fa-3x" aria-hidden="true"></i>
                <p><%= @instagram %></p>
              </div>
            </a>
          </div>
          <!-- /.col-lg-12 -->
        </div>
      </div>
      <!-- /.row -->

      <!-- Content Row -->
      <div class="row">
        <div class="col-md-4">
          <h2>Heading 1</h2>
          <ul>
            <li><%= @name %></li>
            <li><%= @address %></li>
            <li><%= @about %></li>
            <li><%= @twitter %></li>
            <li><%= @linkedin %></li>
            <li><%= @instagram %></li>
            <li><%= @perks %></li>
            <li><%= @ceo %></li>
            <li><%= @numberofemployees %></li>
            <li><%= @pointOfContactName %></li>
            <li><%= @pointOfContactEmail %></li>
            <li><%= @pointOfContactPhone %></li>
            <li><%= @industry %></li>
            <li><%= @amenities %></li>
            <li><%= @qualifications %></li>
            <li><%= @city %></li>
            <li><%= @state %></li>
            <li><%= @zip %></li>
            <li><%= @meetup %></li>
            <li><%= @logo %></li>
          </ul>
        </div>
        <!-- /.col-md-4 -->
        <div class="col-md-4">

        </div>
        <!-- /.col-md-4 -->
        <div class="col-md-4">
          <h2></h2>
          <div class = "gmaps_iframe"><iframe
            width="350"
            height="450"
            frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed/v1/search?key=AIzaSyBvc3cf9rMc8McjqK3mVH2OCzrZndlyahg&q=<%= @address %>,<%= @city %>,<%= @state %>" allowfullscreen>
          </iframe></div>
          <p>Address</p>
          <p><%=@address%>
            <%= @city %>
            <%= @state %>
            <%= @zip %>.</p>
          </div>
          <!-- /.col-md-4 -->
        </div>
        <!-- /.row -->
        <hr>
        <div class="row">
          <div class="col-lg-12">
            <div class="well text-center">
              <div class="row">
                <div class="col-lg-12">
                  <p>Copyright 2016&copy; TechSmart</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Footer -->
        <footer>
        </footer>

      </div>


    </body>
  </frameset>
  </html>
